{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "rdbg",
      "name": "Debug current file with rdbg",
      "request": "launch",
      "script": "${file}",
      "args": [],
      "askParameters": true
    },
    {
      "type": "rdbg",
      "name": "Attach with rdbg",
      "request": "attach",
      "cwd": "${workspaceRoot}/backend",
    {
      "type": "rdbg",
      "name": "Debug RSpec",
      "request": "launch",
      "preLaunchTask": "prepare test database",
      "script": "bundle",
      "args": ["exec", "rspec", "${file}"],
      "askParameters": false,
      "env": {
        "RAILS_ENV": "test",
        "DISABLE_SPRING": "true",
        "PARALLEL_WORKERS": "1"
      },
      "cwd": "${workspaceRoot}/backend",
      "console": "integratedTerminal"
    }
  ]
}
