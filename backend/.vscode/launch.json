{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "rdbg",
      "name": "Debug current file with rdbg",
      "request": "launch",
      "script": "${file}",
      "args": [],
      "askParameters": true
    },
    {
      "type": "rdbg",
      "name": "Attach with rdbg",
      "request": "attach"
    },
    {
      "type": "rdbg",
      "name": "Debug RSpec",
      "request": "launch",
      "script": "bundle",
      "args": [
        "exec",
        "rspec",
        "${file}"
      ],
      "askParameters": false,
      "env": {
        "RAILS_ENV": "test"
      },
      "cwd": "${workspaceRoot}"
    }
  ]
}
