{
  "name": "battlestadium.gg",
  "private": true,
  "scripts": {
    "fix:frontend": "cd frontend && bun fix",
    "fix:backend": "cd backend && bundle exec rubocop -A --force-exclusion"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "bun fix:frontend"
    ],
    "backend/**/*.{rb,erb,js,jsx,ts,tsx,json,css,scss,md}": [
      "bun fix:backend"
    ]

  }
}
