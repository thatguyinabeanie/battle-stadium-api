{
  "name": "Battle Stadium",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "rails:console": "turbo run rails:console",
    "dev": "turbo run dev",
    "start": "pnpm run dev",
    "build": "turbo run build",
    "lint": "turbo lint",
    "test": "turbo test",
    "rubocop": "turbo rubocop",
    "eslint": "turbo eslint",
    "bundle:install": "turbo bundle:install",
    "rails:rswag": "cd backend && pnpm rails:rswag",
    "generate:api": "pnpm rails:rswag && cd frontend && pnpm generate:api"
  },
  "devDependencies": {
    "turbo": "^2.0.11"
  },
  "packageManager": "pnpm@8.15.6",
  "workspaces": [
    "frontend",
    "backend"
  ]
}
